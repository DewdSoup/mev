{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "composite": true,
    "incremental": true,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "../../node_modules/@types"
    ]
  },
  "include": [
    "src/**/*",
    "src/types/**/*.d.ts",
    "types/**/*.d.ts"
  ],
  "references": [
    {
      "path": "../../packages/core"
    },
    {
      "path": "../../packages/risk"
    },
    {
      "path": "../../packages/storage"
    },
    {
      "path": "../../packages/amms"
    },
    {
      "path": "../../packages/phoenix"
    },
    {
      "path": "../../packages/solana"
    }
  ]
}