{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "composite": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "../../node_modules/@types"
    ],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "Bundler"
  },
  "include": [
    "src",
    "src/types/**/*.d.ts",
    "types/**/*.d.ts"
  ],
  "references": [
    {
      "path": "../../packages/core"
    },
    {
      "path": "../../packages/risk"
    },
    {
      "path": "../../packages/storage"
    },
    {
      "path": "../../packages/amms"
    },
    {
      "path": "../../packages/phoenix"
    },
    {
      "path": "../../packages/solana"
    }
  ]
}